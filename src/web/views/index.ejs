								<ul><%listing.skills.forEach(function(skill){%>
								<li><%=skill%></li>
								<%});%></ul>
								
								<!--<div class="pull-right"><h1><i class="mdi-action-grade"></i></h1></div>-->
								
								<br/>
								
								<div class="pull-left">
									<a href="javascript:void(0)" class="btn btn-flat btn-danger">no thanks<div class="ripple-wrapper"></div></a>
								</div>
								<div class="pull-right">
									<a href="javascript:void(0)" class="btn btn-flat btn-success">tell me more</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		
		<%- include partials/body_js.ejs %>
	</body>
	
	
</html>